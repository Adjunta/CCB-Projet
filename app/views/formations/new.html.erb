<h1>New formation</h1>
<%= form_for(@formation) do |f| %>
  <% if @formation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@formation.errors.count, "error") %> prohibited this formation from being saved:</h2>
      <ul>
        <% @formation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :ref %><br>
    <%= f.text_field :ref, :readonly => true %>
  </div>
  <div class="field">
    <%= f.label :nom %><br>
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <%= f.label :prix %><br>
    <%= f.text_field :prix %>
  </div>
  <div class="field">
    <%= f.label :descriptionCourte %><br>
    <%= f.text_area :descriptionCourte %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    Tag :
    <!-- On doit ajouter le lien avec la table des catégories. Comment gérer le fait qu'il y ai plusieurs catégorie possible ? -->
    <%= select_tag(:tag, options_from_collection_for_select(Tag.all, :id, :nom)) %>
  </div>
  <div class="field">
    Type produit :
    <!-- On doit ajouter le lien avec la table des catégories. Comment gérer le fait qu'il y ai plusieurs catégorie possible ? -->
    <%= select_tag(:types_produits, options_from_collection_for_select(TypeProduit.all, :id, :nom), id: "jsTypeProduitSelect") %>
  </div>
  <div class="field">
    Status :
    <!-- On doit ajouter le lien avec la table des catégories. Comment gérer le fait qu'il y ai plusieurs catégories possible ? -->
    <%= select_tag(:statusId, options_from_collection_for_select(Status.all, :id, :nom, Status.find_by(:nom => "En cours de rédaction").id)) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', formations_path %>
