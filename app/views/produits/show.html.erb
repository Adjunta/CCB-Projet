<p id="notice">
	<%= notice %>
</p>

<p>
	<strong>Ref:</strong>
	<%= @produit.ref %>
</p>

<p>
	<strong>Nom:</strong>
	<%= @produit.nom %>
</p>

<p>
	<strong>Description Courte :</strong>
	<%= @produit.descriptionCourte %>
</p>

<p>
	<strong>Description :</strong>
	<%= @produit.description %>
</p>

<p>
	<strong>Prix:</strong>
	<%= @produit.prix %>
</p>

<p>
	<strong>Tag :</strong>
	<%= @produit.tags[0].nom %>
</p>

<p>
	<strong>Type produit :</strong>
	<%= TypeProduit.find_by(:id => @produit.type_produits_id).nom %>
</p>

<p>
	<% if TypeProduit.find_by(:id => @produit.type_produits_id).nom == "Vidéo" %>
		<%= link_to("Visionner", @produit.urlFichier) %>
	<% else %>
		<%= link_to("Télécharger", @produit.urlFichier) %>
	<% end %>
</p>