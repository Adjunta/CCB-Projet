<h1>New produit</h1>

<%= form_for(@produit) do |f| %>
  
  <% if @produit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@produit.errors.count, "error") %> prohibited this produit from being saved:</h2>

      <ul>
      <% @produit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :ref %><br>
    <%= f.text_field :ref,:readonly => true%>  
  </div>

  <div class="field">
    <%= f.label :nom %><br>
    <%= f.text_field :nom %>
  </div>
  <div class="field">
    <%= f.label :prix %><br>
    <%= f.text_field :prix %>
  </div>
  
  <div class="field">
  	<!-- On doit ajouter le lien avec la table des catégories. Comment gérer le fait qu'il y ai plusieurs catégorie possible ? -->
  	<%= select_tag(:categorie, options_from_collection_for_select(Categorie.all, :id, :nom)) %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


