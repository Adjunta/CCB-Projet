<% provide :titreH1, "Création produit" %>

<%= form_for(@produit, html: {class: "formulaire--back"}) do |f| %>

  <% if @produit.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@produit.errors.count, "error") %> prohibited this produit from being saved:</h2>

      <ul>
        <% @produit.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field field--back">
    <span class="field__label"><%= f.label :ref %>
    </span>
    <%= f.text_field( :ref,:readonly => true, class: "field__control")%>
  </div>

  <div class="field field--back">
    <span class="field__label"><%= f.label :nom %>
    </span>
    <%= f.text_field( :nom, class: "field__control") %>
  </div>
  <div class="field field--back">
    <span class="field__label"><%= f.label :prix %>
    </span>
    <%= f.text_field( :prix, class: "field__control") %>
  </div>

  <div class="field field--textarea field--back">
    <%= f.label :descriptionCourte, "Courte description", class: "field__label" %>

      <%= f.text_area( :descriptionCourte, cols: 100, rows: 5, max_length: 150, class: "field__control force__height") %>
    </div>

    <div class="field field--textarea field--back">
      <span class="field__label"><%= f.label :description %>
      </span>
      <%= f.text_area( :description, cols: 100, rows: 10, class: "field__control force__height") %>
    </div>

    <div class="field field--back">
      <span class="field__label">Tag </span>
      <%= select_tag(:tag, options_from_collection_for_select(Tag.where(:mere => nil), :id, :nom), class: "field__control field__control--select") %>
    </div>

    <div class="field field--back">
      <span class="field__label">Status</span>
      <%= select_tag(:status, options_from_collection_for_select(Status.all, :id, :nom), class: "field__control field__control--select") %>
    </div>

    <div class="field field--back">
      <span class="field__label">Type produit</span>
      <%= select_tag(:types_produits,
        content_tag(:option, "Choisir un type.", :value => "") +
        options_from_collection_for_select(TypeProduit.all, :id, :nom), id: "jsTypeProduitSelect", class: "field__control field__control--select") %>
    </div>

    <div id="extract-urlMultimedia">
      <div class="field field--back">
        <%= f.label :urlMultimedia, "Lien externe", class: "field__label" %>
          <br />
        <%= f.text_field :urlMultimedia, class: "field__control" %>
      </div>
    </div>

    <div class="field field--back">
      <%= f.label :image, "Miniature", class: "field__label" %>
      <br />
      <%= f.file_field :image, class: "field__control" %>
    </div>

    <div id="extract-urlFichier">
      <div class="field field--back">
        <span class="field__label"><%= f.label :urlFichier, "Charger le fichier"%></span>
        <%= f.file_field( :urlFichier, class: "field__control")  %>
      </div>
    </div>

    <div id="placeToLoad">
    </div>

    <div class="field field--back">
        <div class="actions">
          <%= f.submit "Créer", class: "button button--submit"%>
        </div>
    </div>
  <% end %>

  <%= link_to 'Retour', produits_path %>
