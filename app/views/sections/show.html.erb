<section class="section">
  <div class="section__content section__content--sticky">
    <div class="fiche">

      <p id="notice"><%= notice %></p>

      <div class="fiche__general">
        <span class="fiche__general__title"> Description :</span>
        <div class="fiche__general__description">
          <%= @section.description %>
        </div>
        <div class="fiche__general__etape">
          <%= Tag.find_by(:id => Formation.find_by(:id => @section.formations_id).tags.ids[0]).nom %>
          <button onClick="window.history.back();" class="fiche__general__etape__bouton"> Retour</button>
        </div>
      </div>
      <div class="fiche__detail">
        <div class="fiche__detail__grey">
          <div class="fiche__detail__grey__title">
            <%= Formation.find_by(:id => @section.formations_id).nom %></div>
          <div class="fiche__detail__grey__image">
<%#= image_tag(Formation.find_by(:id => @section.formations_id).image, class: "apercu") %>
          </div>
          <div class="fiche__detail__grey__lien">
            <button class="button button--submit">Lien</button>
          </div>
        </div>
      </div>
<%#= link_to 'Edit', edit_section_path(@section) %>
<%#= link_to 'Back', sections_path %>
    </div>
  </div>
</section>