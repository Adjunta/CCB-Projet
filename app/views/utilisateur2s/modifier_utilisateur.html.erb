<% provide :titreH1, "Editing utilisateur2"%>


<%if(@utilisateur2.nil?)%>
  <% @utilisateur2 = Utilisateur2.find_by(id: session[:user_id]) %>
<% end %>
<%= form_for(@utilisateur2) do |f| %>
  <% if @utilisateur2.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@utilisateur2.errors.count, "erreur") %> empèche la sauvegarde :</h2>

      <ul>
      <% @utilisateur2.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field field--back">
  <span class="field__label"><%= f.label "Nom" %></span>
    <%= f.text_field :nom, :class=>'field__control' %>
  </div>

<div class="field field--back">
  <span class="field__label"><%= f.label "Prénom" %></span>
    <%= f.text_field :prenom, :class=>'field__control' %>
  </div>

 <div class="field field--back">
    <span class="field__label"><%= f.label "Mot de passe actuel" %><br></span>
    <%= f.password_field :old_password, :class=>'field__control'  %><br>
 </div>

  <div class="field field--back">
    <span class="field__label"><%= f.label "Nouveau mot de passe" %><br></span>
    <%= f.password_field :password, :class=>'field__control'  %><br>
    <span class="field__label"><%= f.label "Confirmation mot de passe" %><br></span>
    <%= f.password_field :password_confirmation, :class=>'field__control'  %>
  </div>

  <div class="field field--back">

  <div class="actions">
    <%= f.submit 'Enregistrer', :class=>'button button--submit' %>
  </div>
</div>
<% end %>
