<% provide :titreH1, "New chapitre" %>

<%= form_for(@chapitre, :url => "/formations/#{@formation.id}/sections/#{@section.id}/chapitres", html: {class: "formulaire--back"}) do |f| %>
  <% if @chapitre.errors.any? %>
    <div class="error_explanation">
        <h2><%= pluralize(@chapitre.errors.count, "error") %> prohibited this chapitre from being saved:</h2>

        <ul>
            <% @chapitre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field field--back">
      <span class="field__label"><%= f.label :ref %></span>
      <%= f.text_field( :ref, class: "field__control") %>
  </div>
  <div class="field field--back">
      <span class="field__label"><%= f.label :nom %></span>
      <%= f.text_field( :nom, class: "field__control") %>
  </div>
  <div class="field field--textarea field--back">
      <span class="field__label"><%= f.label :description %></span>
      <%= f.text_area( :description, class: "field__control") %>
  </div>
  <div class="field field--textarea field--back">
      <span class="field__label"><%= f.label :texte %></span>
      <%= f.text_area( :texte, class: "field__control") %>
  </div>

  <div class="field field--back">
    <div class="actions">
        <%= f.submit class: "button button--submit" %>
    </div>
  </div>
<% end %>



